; convert ASCII code in W to upper case
; 10 bytes
;<+L18_strlib_toupper>
L18_strlib_toupper
        addlw   255 - 'z'
        addlw   ('z'-'a')+1
        bnc     L18_strlib_toupper_end
        addlw   'A'-'a'
L18_strlib_toupper_end
        return  0
X18_strlib_toupper
;<->




; convert ASCII code in W to lower case
; 10 bytes
;<+L18_strlib_tolower>
L18_strlib_tolower
        addlw   255 - 'Z'
        addlw   ('Z'-'A')+1
        bnc     C18_strlib_tolower_end
        addlw   'a'-'A'
L18_strlib_tolower_end
        return  0
X18_strlib_tolower        
