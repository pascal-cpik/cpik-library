; strlen
; size_t strlen(char *s);
; 24 bytes
;<+C18_strlen>
C18_strlen
        movlw   -1             ; copy s to FSR1
        movff   PLUSW0,FSR1L     
        movff   INDF0,FSR1H         
        movwf   _r0,0           ; take advantage that w=0xff
        movwf   _r0+1,0        
L18_strlen_loop
        infsnz  _r0,F,0
        incf    _r0+1,F,0
        movf    POSTINC1,W,0
        bnz     L18_strlen_loop                  
        return  0
X18_strlen        
