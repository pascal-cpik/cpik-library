; copy string
;
; returns pointer to destination
;
; char *strcpy(char *dest, char *src)
; 34 bytes
;<+C18_strcpy>
C18_strcpy
        movlw   -3             ; copy src to FSR1
        movff   PLUSW0,FSR1L
        movlw   -2
        movff   PLUSW0,FSR1H

        movlw   -1             ; copy dest to FSR2 and R
        movf    PLUSW0,W,0
        movwf   FSR2L,0     
        movwf   _r0,0
        movf    INDF0,W,0
        movwf   FSR2H,0
        movwf   _r0+1,0
L18_strcpy_entry_from_strcat
L18_strcpy_loop
        movf    POSTINC1,W,0
        movwf   POSTINC2,0        
        bnz     L18_strcpy_loop
        return  0 
X18_strcpy        
