; compare two strings
;
; returns -1,0,1 if s1<s2, s1=s2, s1>s2
; note that comparisons are unsigned (matters for chars >0x7f) 
; although char is signed. This is compatible with the GNU libc's
; behaviour
;
; char *strcmp(char *s1, char *s2)
; 46 bytes
;<+C18_strcmp>
C18_strcmp
        clrf    _r0,0
        movlw   -3               ; copy src to FSR1
        movff   PLUSW0,FSR1L
        movlw   -2
        movff   PLUSW0,FSR1H

        movlw   -1               ; copy dest to FSR2         
        movff   PLUSW0,FSR2L     
        movff   INDF0,FSR2H         
                   
L18_strcmp_loop
        movf    POSTINC1,W,0
        subwf   POSTINC2,W,0
        bnc     L18_strcmp_smaller
        bz      L18_strcmp_checkend
L18_strcmp_larger   
        incf    _r0,F,0
        return  0
L18_strcmp_smaller
        decf    _r0,F,0
        return  0
L18_strcmp_checkend
        movf    INDF1,W,0
        bnz     L18_strcmp_loop
        return  0
X18_strcmp        
